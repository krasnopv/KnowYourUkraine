# Strapi Production Environment
# Copy this to .env.production and fill in values

HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Supabase PostgreSQL
DATABASE_CLIENT=postgres
DATABASE_HOST=db.YOUR_PROJECT_REF.supabase.co
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=YOUR_SUPABASE_DB_PASSWORD
DATABASE_SSL=true

# Supabase Storage
UPLOAD_PROVIDER=supabase
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_KEY=YOUR_SUPABASE_SERVICE_KEY
SUPABASE_BUCKET=strapi-uploads

# Strapi Secrets (generate new ones!)
APP_KEYS=generate-random-key-1,generate-random-key-2
API_TOKEN_SALT=generate-random-salt
ADMIN_JWT_SECRET=generate-random-secret
TRANSFER_TOKEN_SALT=generate-random-salt
JWT_SECRET=generate-random-secret

